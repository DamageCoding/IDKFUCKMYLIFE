<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>2D Driving Game</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
        }

        canvas {
            display: block;
            background-color: #333;
        }
    </style>
</head>
<body>
    <canvas id="gameCanvas" width="800" height="400"></canvas>

    <script>
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");

        // Car properties
        const car = {
            x: canvas.width / 2 - 25,
            y: canvas.height - 80,
            width: 50,
            height: 80,
            speed: 5,
        };

        // Game variables
        let score = 0;
        let isGameOver = false;

        // Keyboard input handling
        const keys = {};
        document.addEventListener("keydown", (event) => {
            keys[event.key] = true;
        });
        document.addEventListener("keyup", (event) => {
            keys[event.key] = false;
        });

        // Obstacles
        const obstacles = [];

        function drawCar() {
            ctx.fillStyle = "red";
            ctx.fillRect(car.x, car.y, car.width, car.height);
        }

        function drawObstacles() {
            ctx.fillStyle = "green";
            for (const obstacle of obstacles) {
                ctx.fillRect(obstacle.x, obstacle.y, obstacle.width, obstacle.height);
            }
        }

        function updateGameArea() {
            if (isGameOver) {
                return;
            }

            // Clear the canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Move the car
            if (keys["ArrowLeft"] && car.x > 0) {
                car.x -= car.speed;
            }
            if (keys["ArrowRight"] && car.x + car.width < canvas.width) {
                car.x += car.speed;
            }

            // Generate obstacles
            if (Math.random() < 0.03) {
                const obstacleWidth = Math.random() * 100 + 20;
                const obstacleX = Math.random() * (canvas.width - obstacleWidth);
                const obstacle = {
                    x: obstacleX,
                    y: 0,
                    width: obstacleWidth,
                    height: 20,
                };
                obstacles.push(obstacle);
            }

            // Move and check collisions for obstacles
            for (let i = obstacles.length - 1; i >= 0; i--) {
                const obstacle = obstacles[i];
                obstacle.y += 5;

                // Check collision with car
                if (
                    car.x < obstacle.x + obstacle.width &&
                    car.x + car.width > obstacle.x &&
                    car.y < obstacle.y + obstacle.height &&
                    car.y + car.height > obstacle.y
                ) {
                    isGameOver = true;
                }

                // Remove obstacles that are out of the canvas
                if (obstacle.y > canvas.height) {
                    obstacles.splice(i, 1);
                    score++;
                }
            }

            // Draw score
            ctx.fillStyle = "white";
            ctx.font = "24px Arial";
            ctx.fillText(`Score: ${score}`, 20, 30);

            // Draw the car
            drawCar();

            // Draw obstacles
            drawObstacles();

            if (!isGameOver) {
                requestAnimationFrame(updateGameArea);
            } else {
                ctx.fillStyle = "red";
                ctx.font = "48px Arial";
                ctx.fillText("Game Over", canvas.width / 2 - 120, canvas.height / 2);
                ctx.fillStyle = "white";
                ctx.font = "24px Arial";
                ctx.fillText("Press 'R' to restart", canvas.width / 2 - 120, canvas.height / 2 + 40);
            }
        }

        // Restart the game
        function restartGame() {
            score = 0;
            isGameOver = false;
            car.x = canvas.width / 2 - 25;
            obstacles.length = 0; // Clear obstacles array
            updateGameArea();
        }

        // Listen for the 'R' key to restart the game
        document.addEventListener("keydown", (event) => {
            if (isGameOver && event.key === "r") {
                restartGame();
            }
        });

        // Start the game loop
        updateGameArea();
    </script>
</body>
</html>
